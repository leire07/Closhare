<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_anyadir"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/top_circle"
        android:backgroundTint="#F0F1F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Añadir"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3"
        app:layout_constraintTop_toTopOf="@+id/frameLayout3" />

    <Button
        android:id="@+id/aleatorio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icon_style"
        android:backgroundTint="#C6CBCE"
        android:drawableTop="@drawable/icon_aleatorio"
        android:elegantTextHeight="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="bottom|center"
        android:paddingTop="10dp"
        android:paddingBottom="1dp"
        android:text="Aleatorio"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/prenda"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/prenda"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/icon_style"
        android:backgroundTint="#C6CBCE"
        android:drawableTop="@drawable/icon_percha"
        android:elegantTextHeight="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="bottom|center"
        android:paddingBottom="1dp"
        android:text="Prenda"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/aleatorio"
        app:layout_constraintEnd_toStartOf="@+id/coleccion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/aleatorio"
        app:layout_constraintTop_toTopOf="@+id/aleatorio" />

    <Button
        android:id="@+id/coleccion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/icon_style"
        android:backgroundTint="#C6CBCE"
        android:drawableTop="@drawable/icon_conjunto"
        android:elegantTextHeight="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="bottom|center"
        android:paddingTop="10dp"
        android:paddingBottom="1dp"
        android:text="Colección"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prenda"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
        app:layout_constraintStart_toEndOf="@+id/prenda"
        app:layout_constraintTop_toTopOf="@+id/prenda" />

</androidx.constraintlayout.widget.ConstraintLayout>